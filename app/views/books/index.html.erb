<div class="container">
 <div class="row">
   <div class="col-md-3">
  <!-- ユーザー詳細 -->
<% if current_user.present? %>
  <%= render partial: 'books/user_info', locals: { user: current_user } %>
<% else %>
  <p>ユーザーが存在しません。</p>
<% end %>
<!-- 投稿フォーム -->
<%= render partial: 'books/form', locals: { book: @book } %>
<div>
  <%= flash[:notice] %>
</div>

<% if flash.now[:error].present? %>
  <div>
    <% flash.now[:error].each do |error_message| %>
      <p><%= error_message %></p>
    <% end %>
  </div>
<% end %>
  </div>

<div class="col-md-8 offset-md-1">
<!-- 投稿一覧 -->
<h1>Books</h1>


<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  
  <tbody>
    <% @books.each do |book| %>
  <tr>
    <td>
        <%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user) %>
    </td>
    <td>
      <%= link_to book.title, book_path(book) %>
    </td>
    <td><%= book.body %></td>
  </tr>
<% end %>
</div>
  </tbody>
</table>
</div>
</div>
