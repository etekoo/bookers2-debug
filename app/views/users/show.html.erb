<div class="container">
 <div class="row">
   <div class="col-md-3">
     <!-- ユーザー詳細・投稿フォーム -->
<%= render partial: 'books/user_info', locals: { user: @user } %>

<%= render partial: 'books/form', locals: { book: @book } %>
<div>
  <%= flash[:notice] %>
</div>
</div>

<div class="col-md-8 offset-md-1">
<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user.id) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>
</div>
</div>
</div>